    <div class="box">
        <div class="box-body">

            <form method="POST">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <div class="form-group">
                            <label>Bus Number *</label>
                            <input type="text" name="bus_num" value="<%= bus.bus_num %>" id="bus_num" placeholder="Enter the Bus Number" class="form-control" />
                            <br />

                            <label>Model *</label>
                            <input type="text" name="model" value="<%= bus.model %>" id="model" placeholder="Enete Bus Model" class="form-control" />
                            <br />
                            <label>Assigned Driver *</label>
                            <input type="text" name="assigned_driver" value="<%= bus.assigned_driver %>" id="assigned_driver" placeholder="Assigned Driver" class="form-control" />
                            <br />
                        </div>
                    </div>

                    <div id="row-photo">
                        <div class="col-md-12">
                            <div class="row" style="margin-top:10px;">
                                <div class="form-group">
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- /.box-body -->
    </div>
